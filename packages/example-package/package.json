{
  "name": "example-package",
  "version": "1.0.0",
  "description": "A TypeScript package template with minimal setup. Can also be used locally via npm pack and tarball installation (see README).",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsx --no-warnings ./src/index.ts",
    "debug": "tsx --inspect-brk ./src/index.ts",
    "dev": "tsx watch ./src/index.ts",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "type-check": "tsc --noEmit",
    "lint": "eslint ",
    "lint:fix": "eslint --fix",
    "format": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepare": "npm run build",
    "validate": "npm run type-check && npm run lint && npm run format && npm run test",
    "clean": "rm -rf dist coverage",
    "clean:all": "rm -rf dist coverage node_modules",
    "link": "npm link",
    "unlink": "npm unlink"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/ui": "^3.1.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.31.1",
    "vitest": "^3.1.2"
  }
}
